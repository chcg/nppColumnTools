<Project>

  <!-- 
    Call with:
  
    <Import Project="NppZip.targets"/>

    from *.vcxproj file.
  -->

  <Target Name="Zip" DependsOnTargets="Build">
    <Exec Command="for /f %%i in ('powershell -Command &quot;(Get-Item $(OutDir)$(TargetName)$(TargetExt)).VersionInfo.ProductVersion&quot;') do zip $(OutDir)$(TargetName)-v%%i-$(Platform).zip $(OutDir)$(TargetName)$(TargetExt)"/>
  </Target>
</Project>
